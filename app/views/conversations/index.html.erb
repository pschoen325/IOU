<div class="hmenu">
  <%= render 'devise/menu/login_items' %>
</div>
<div class="container-fluid">
<div class="jumbotron col-xs-12">

<%= page_header "Your Conversations" %>
<div class="container">
  <div class="page_header">
    <h1>iOU</h1>
    <h3>Hello <%= current_user.name %>!</h3>
  </div>
</div>
<div class="row">
  <div class="col-sm-12 col-m-12">
    <ul class="nav nav-pills nav-stacked">
      <%= mailbox_section 'inbox', @box %>
      <%= mailbox_section 'sent', @box %>
      <%= mailbox_section 'trash', @box %>
      <li><a href="messages/new">New IOU</a></li>
    </ul>
  </div>




  <%= will_paginate %>
</div>
</div>
<div class="col-sm-12">
  <ul class="list-group">
    <%= render partial: 'conversations/conversation', collection: @conversations %>
  </ul>

  <%= will_paginate %>
</div>

<div class="col-sm-12">
<% if @box == 'trash' %>
  <p><%= link_to 'Empty trash', empty_trash_conversations_path, class: 'btn btn-danger', method: :delete,
                 data: {confirm: 'Are you sure?'} %></p>
<% end %>
</div>
</div>
<%= stylesheet_link_tag 'messages.css' %>
